<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setAnnouncement">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_showclasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="New Announcement"
                android:textColor="#d872"
                android:gravity="center"
                android:textSize="28dp"
                android:textStyle="italic|bold"
                />
            <EditText
                android:id="@+id/et_announce_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:singleLine="true"
                android:autoLink="web"
                android:ems="10"
                android:textStyle="bold"
                android:textSize="22sp"
                android:hint="An intresting Title"
                android:paddingHorizontal="10dp"
                />
            <EditText
                android:id="@+id/et_announce_desc"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:maxHeight="200dp"
                android:ems="10"
                android:autoLink="web"
                android:hint="Your text post"
                android:inputType="text|textMultiLine"
                android:paddingHorizontal="10dp"
                android:text="" />
            <Button
                android:id="@+id/bt_post_announce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="300dp"
                android:gravity="center"
                android:text="post"
                android:textSize="20sp"
                android:textStyle="bold"

                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>